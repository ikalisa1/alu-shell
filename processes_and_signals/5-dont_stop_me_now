#!/usr/bin/env bash
#  Bash script that stops 4-to_infinity_and_beyond processprocess_name="4-to_infinity_and_beyond"
pid=$(pgrep -o "$process_name")

if [ -z "$pid" ]; then
	    echo "Process '$process_name' not found."
    else
	        # Use kill to stop the process
		    kill "$pid"
		        echo "Process '$process_name' (PID $pid) has been stopped."
fi
